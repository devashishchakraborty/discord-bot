import requests
import random


class Posts:
    def __init__(self):

        self.list = ['1310881382755741702', '1311148460834394112', '1311170316647899136', '1311189721368813571', '1310812224307355648', '1310830848854249472',
                     '1310873844299624449', '1310791649354641408', '1310495574769057793', '1310466386796228608', '1310197398199660545', '1310445720650960896', '1310169627406729216', '1310151416762171393', '1310091299438043136', '1310080543866847232', '1310110689785122816', '1309779621395615744', '1309743039514959872', '1309446090798673920', '1309722896948842498', '1309460449503531008', '1309403374672986113', '1309722886647640064', '1309733305198100480', '1309367489717886976', '1309341693372592129', '1309103467819081732', '1309088352679923714', '1308994935031500801', '1309033929018609664', '1309062357684039684', '1308724472501870593', '1308980858091696128', '1308690819881132032', '1308361577599438849', '1308646000530132992', '1308663103513477123', '1308404727072292864', '1308623981491048449', '1308348063677784064', '1308333712728236035']

        self.url = f"https://api.twitter.com/2/tweets/{random.choice(self.list)}?tweet.fields=text&expansions=attachments.media_keys&media.fields=url"

        self.headers = {
            'Authorization': r'Bearer YOUR TWITTER BEARER TOKEN FOR AUTHENTICATION'}

        self.response = requests.get(self.url, headers=self.headers)
        # print(response.status_code)
        self.x = self.response.json()
        self.text = self.x['data']['text']
        self.image_url = self.x["includes"]["media"][0]["url"]
